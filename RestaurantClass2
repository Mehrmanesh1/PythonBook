class Restaurant:
    def __init__(self, name, cuisine):
        self.restaurant_name = name
        self.cuisine_type = cuisine
        
    def describe_restaurant(self):
        print(f"{self.restaurant_name} serves {self.cuisine_type}")
        
    def open_restaurant(self):
        print(f"{self.restaurant_name} is open")
        
test = Restaurant("Cafe","Bread")
test.describe_restaurant()
test.open_restaurant()

test2 = Restaurant("Kabab","Persian")
test2.describe_restaurant()
test2.open_restaurant()

test3 = Restaurant("Tacos","Mexican")
test3.describe_restaurant()
test3.open_restaurant()
        
